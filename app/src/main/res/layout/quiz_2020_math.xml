<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:scrollX="-160dp"
        android:scrollY="-40dp"
        android:tint="#676767"
        app:srcCompat="@drawable/ic_chevron_right_black_24dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/quiz_2020_math_image"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:tint="#6E6E6E"
                    app:srcCompat="@drawable/audiohq_2020_quiz" />

                <EditText
                    android:id="@+id/quiz_2020_math_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz_2020_math_image"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:autofillHints="no"
                    android:ems="10"
                    android:hint="@string/quiz_2020_math_et_hint"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/quiz_2020_math_open_update_log"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/quiz_2020_math_answer"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/update_title" />


            </RelativeLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/quiz_2020_math_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:src="@drawable/ic_check_black_24dp" />
    </RelativeLayout>

</FrameLayout>