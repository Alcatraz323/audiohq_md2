<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/float_list_item_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:stateListAnimator="@animator/raise"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="false">

            <FrameLayout
                android:id="@+id/float_item_back_tint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/float_list_item_full_seekbar_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.2"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <FrameLayout
                        android:id="@+id/float_list_item_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:paddingStart="16dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="8dp">

                        <ImageView
                            android:id="@+id/float_list_item_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            app:srcCompat="@mipmap/ic_launcher" />

                        <ImageView
                            android:id="@+id/float_list_item_pin_image"
                            android:layout_width="15dp"
                            android:layout_height="14dp"
                            android:layout_gravity="bottom|end"
                            android:src="@drawable/ic_pin"
                            app:srcCompat="@drawable/ic_pin" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:layout_weight="6.5"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/float_list_item_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="4dp"
                            android:maxLines="1"
                            android:textAllCaps="false"
                            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Switch" />

<!--                        <SeekBar-->
<!--                            android:id="@+id/float_list_item_general_seek"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:clickable="false"-->
<!--                            android:focusable="false"-->
<!--                            android:max="10000"-->
<!--                            android:progress="10000"-->
<!--                            android:visibility="gone" />-->

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_list_item_full_seek_listener"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" />
            </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>